#!/bin/ksh
 
# Template script for running Cadence Xcelium simulator (XMCSIM) on Cadence Modus DFT Software Solution generated test vectors.
 
#  Generated by Genus(TM) Synthesis Solution 21.18-s082_1
 
export WORKDIR=atpg
 
# // Edit +sdf_file option to replace 'DEFAULT.sdf' with sdf file.
# // +sdf_file option overrides the sdft file defined in sdf_annotate step in mainsim.v

# // Replace +TIMING with +SDF_Maximum, +SDF_Minimum, +SDF_Typical 
# // to simulate with corresponding timing information respective

xrun \
   +access+rwc \
   +xmstatus \
   +xm64bit \
   +TESTFILE1=$WORKDIR/testresults/verilog/VER.FULLSCAN_TIMED.rapid_x_cpu_atpg.data.scan.ex1.ts1.verilog \
   +TESTFILE2=$WORKDIR/testresults/verilog/VER.FULLSCAN_TIMED.rapid_x_cpu_atpg.data.logic.ex1.ts2.verilog \
   +HEARTBEAT \
   +FAILSET \
   +xmtimescale+1ns/1ps \
   +xmoverride_timescale \
   +libext+.v+.V+.z+.Z+.gz \
   +define+simvision \
   +define+sdf_annotate \
   +sdf_verbose \
   +sdf_file+DEFAULT.sdf \
   +xmerror+CUSFNF \
   +define+TIMING \
   +xmlibdirname+$WORKDIR/Inca_libs_21_46_39 \
   -l $WORKDIR/ncverilog_FULLSCAN_TIMED.log \
  -v ../libs/LibParsing/NangateOpenCellLibrary_typical.lib \
  -v ../OpenRam/openram_150/sram_150b_512_1rw_freepdk45.v \
$WORKDIR/rapid_x_cpu.test_netlist.v \
$WORKDIR/testresults/verilog/VER.FULLSCAN_TIMED.rapid_x_cpu_atpg.mainsim.v

